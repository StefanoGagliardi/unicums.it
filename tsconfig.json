{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    // "paths": {
    //   "@assets/*": ["src/assets/*"],
    //   "@config/*": ["src/config/*"],
    //   "@components/*": ["src/components/*"],
    //   "@components/pages/*": ["src/components/pages/*"],
    //   "@services/*": ["src/services/*"],
    //   "@interfaces/*": ["src/interfaces/*"]
    // }
  },
  "include": [
    "./scripts",
    "./test",
    "./typechain",
    "types.ts"
  ],
  "files": [
    "./hardhat.config.ts"
  ],
  "exclude": [
    "node_modules",
    "scripts/setup.ts"
  ],
}
